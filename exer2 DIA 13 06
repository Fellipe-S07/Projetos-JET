OUTRO ARQUIVO


def calcular_area_retangulo(valorre, valorre2):
    area = valorre * valorre2
    return area


def calcular_area_triangulo(valort, valort2):
    area = (valort*valort2)/ 2
    return area
    

def calcular_area_circulo(valorraio):
    area = 3.14 * (valorraio * valorraio)
    return area
